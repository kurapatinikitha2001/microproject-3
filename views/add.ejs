<html lang="en">
    <head>
        <title>Icecream Parlour</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <link rel="stylesheet" href="styles.css">
        <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
    </head>
    <body>
        <h4 class="c1">Add a new Product</h4>
        <div class="container">
        <form action="/AddData" method="POST">
            <div class="form-outline mb-2">
                <input type="text"  class="form-control" placeholder="Enter Icecream id" name="icid"/>
                <label class="form-label" for="form4Example1"></label>
              </div>
              <div class="form-outline mb-2">
                <input type="text"  class="form-control" placeholder="Enter flavour name" name="flavour"/>
                <label class="form-label" for="form4Example1"></label>
              </div>
              <div class="form-outline mb-2">
                <input type="text"  class="form-control" placeholder="Enter Icecream price" name="price"/>
                <label class="form-label" for="form4Example1"></label>
              </div>
              <div class="form-outline mb-2">
                <input type="text" class="form-control" placeholder="Enter stock" name="stock"/>
                <label class="form-label" for="form4Example1"></label>
              </div>
              <div class="form-outline mb-2">
                <input type="text" class="form-control" placeholder="Enter Size[S/M/L]" name="size"/>
                <label class="form-label" for="form4Example1"></label>
              </div>
        </form>
    </div>
    <center><a href="/" class="c3" >Home Page</a></center>
    </body>
</html>
