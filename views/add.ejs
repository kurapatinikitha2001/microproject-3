<html lang="en">
    <head>
        <title>Icecream Parlour</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <link rel="stylesheet" href="styles.css">
    </head>
    <body>
        <h4 class="c1">Add a new Product</h4>
        <div class="container">
        <form action="/AddData" method="POST">
            <label>Icecream Id:</label>
            <input type="text" placeholder="Enter Icecream id" name="icid"><br>

            <label>Flavour:</label>&nbsp;
            <input type="text" placeholder="Enter flavour name" name="flavour"><br>

            <label>Icecream price:</label>&nbsp;
            <input type="number" placeholder="Enter Icecream price" name="price"><br>

            <label>Stock:</label>&nbsp;
            <input type="number" placeholder="Enter stock" name="stock"><br>

            <label>Size:</label>&nbsp;
            <input type="text" placeholder="Enter Size[S/M/L]" name="size"><br>

            <button id="submit" type="submit" >Submit</button>
        </form>
        <a href="/" class="c3" >Home Page</a>
    </div>
    </body>
</html>